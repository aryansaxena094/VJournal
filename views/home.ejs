<%- include("partials/header") %>

<h1> Home </h1>
<p> <%= p_data %> </p>

<% posts.forEach(function(post){ %>
<h2 class="modal-title"><%= post.title %></h5>
<p> 
    <% if(post.content.length<=50){  %>
        <%= post.content %>
    <% } else {  %>
        <%= post.content.substring(0, 150) + "..." %>
        <a href=<%="/posts/"+post.title%>>Read More</a>
     <% } %>
</p>
<% }); %>

<%- include("partials/footer") %>